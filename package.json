{
  "name": "validate-validaton",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "wireit",
    "build": "wireit",
    "build:demo": "wireit",
    "build:lib": "wireit",
    "build:schematics": "wireit",
    "test:lib": "wireit",
    "test:app": "wireit",
    "test": "wireit",
    "lint:lib": "wireit",
    "hooks:pre-commit": "node hooks/pre-commit.js",
    "prepare": "husky install"
  },
  "wireit": {
    "build:lib": {
      "command": "ng build --project validointi --configuration production",
      "output": [
        "dist/validate/**/*.*"
      ],
      "files": [
        "projects/validointi/core/src/**/*.*",
        "projects/validointi/core/package.json",
        "projects/validointi/core/tsconfig.lib.prod.json",
        "angular.json"
      ]
    },
    "build:schematics": {
      "command": "npx tsc -p projects/validointi/core/tsconfig.schematics.json",
      "output": [
        "dist/validate/**/*.*"
      ],
      "files": [
        "projects/validointi/core/schematics/**/*.*",
        "projects/validointi/core/schematics/collection.json"
      ],
      "dependencies": [
        "build:lib"
      ]
    },
    "build:demo": {
      "command": "ng build --project demo --configuration production --delete-output-path",
      "output": [
        "dist/demo/**/*.*"
      ],
      "files": [
        "projects/demo/src/**/*.*",
        "projects/demo/package.json",
        "projects/demo/tsconfig.app.json",
        "angular.json"
      ],
      "dependencies": [
        "build:lib"
      ]
    },
    "build": {
      "dependencies": [
        "build:lib",
        "build:schematics",
        "build:demo"
      ]
    },
    "test:lib": {
      "command": "ng test --project validointi"
    },
    "test:app": {
      "command": "ng test --project demo",
      "dependencies": [
        "build:lib"
      ]
    },
    "test": {
      "dependencies": [
        "test:lib",
        "test:app"
      ]
    },
    "lint:lib": {
      "command": "ng lint --project validointi --fix",
      "files": [
        "**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs"
      ],
      "output": []
    },
    "start": {
      "command": "ng serve --project demo",
      "dependencies": [
        "build:lib"
      ],
      "/**": "The server cmd is actually not supported by wire-it yet, one it is, the start command will restart the server if there is a lib update **/",
      "server": true
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.1.3",
    "@angular/common": "^18.1.3",
    "@angular/compiler": "^18.1.3",
    "@angular/core": "^18.1.3",
    "@angular/forms": "^18.1.3",
    "@angular/platform-browser": "^18.1.3",
    "@angular/platform-browser-dynamic": "^18.1.3",
    "@angular/router": "^18.1.3",
    "husky": "^8.0.2",
    "open-props": "^1.4.24",
    "rxjs": "~7.5.7",
    "tslib": "^2.4.1",
    "vest": "^4.6.7",
    "wireit": "^0.7.2",
    "zone.js": "~0.14.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.1.3",
    "@angular-eslint/builder": "18.2.0",
    "@angular-eslint/eslint-plugin": "18.2.0",
    "@angular-eslint/eslint-plugin-template": "18.2.0",
    "@angular-eslint/schematics": "18.2.0",
    "@angular-eslint/template-parser": "18.2.0",
    "@angular/cli": "^18.1.3",
    "@angular/compiler-cli": "^18.1.3",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "^18.19.42",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@web/test-runner": "^0.18.2",
    "all-contributors-cli": "^6.24.0",
    "chalk": "^5.1.2",
    "eslint": "^8.57.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.2",
    "jasmine-core": "~4.5.0",
    "joi": "^17.7.0",
    "lint-staged": "^13.0.3",
    "ng-packagr": "^18.1.0",
    "typescript": "~5.4.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run hooks:pre-commit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,ts}": [
      "prettier --write"
    ],
    "*.{ts}": [
      "eslint --fix --cache"
    ]
  }
}
