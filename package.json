{
  "name": "validate-validaton",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "wireit",
    "build": "wireit",
    "build:demo": "wireit",
    "build:lib": "wireit",
    "build:schematics": "wireit",
    "test:lib": "wireit",
    "test": "wireit",
    "lint:lib": "wireit",
    "hooks:pre-commit": "node hooks/pre-commit.js",
    "prepare": "husky"
  },
  "wireit": {
    "build:lib": {
      "command": "ng build --project validointi --configuration production",
      "output": [
        "dist/validate/**/*.*"
      ],
      "files": [
        "projects/validointi/core/src/**/*.*",
        "projects/validointi/core/package.json",
        "projects/validointi/core/tsconfig.lib.prod.json",
        "angular.json"
      ]
    },
    "build:schematics": {
      "command": "npx tsc -p projects/validointi/core/tsconfig.schematics.json",
      "output": [
        "dist/validate/**/*.*"
      ],
      "files": [
        "projects/validointi/core/schematics/**/*.*",
        "projects/validointi/core/schematics/collection.json"
      ],
      "dependencies": [
        "build:lib"
      ]
    },
    "build:demo": {
      "command": "ng build --project demo --configuration production --delete-output-path",
      "output": [
        "dist/demo/**/*.*"
      ],
      "files": [
        "projects/demo/src/**/*.*",
        "projects/demo/package.json",
        "projects/demo/tsconfig.app.json",
        "angular.json"
      ],
      "dependencies": [
        "build:lib"
      ]
    },
    "build": {
      "dependencies": [
        "build:lib",
        "build:schematics",
        "build:demo"
      ]
    },
    "test:lib": {
      "command": "ng test --project validointi",
      "files": [
        "projects/validointi/core/src/**/*.*",
        "projects/validointi/core/package.json",
        "projects/validointi/core/tsconfig.lib.prod.json",
        "angular.json"
      ]
    },
    "test": {
      "dependencies": [
        "test:lib"
      ]
    },
    "lint:lib": {
      "command": "ng lint --project validointi --fix",
      "files": [
        "**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs"
      ],
      "output": []
    },
    "start": {
      "command": "ng serve --project demo",
      "dependencies": [
        "build:lib"
      ],
      "files": [
        "dist/validointi/**/*.*"
      ],
      "service": true
    }
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.2.3",
    "@angular/compiler": "^20.2.3",
    "@angular/core": "^20.2.3",
    "@angular/forms": "^20.2.3",
    "@angular/platform-browser": "^20.2.3",
    "@angular/platform-browser-dynamic": "^20.2.3",
    "@angular/router": "^20.2.3",
    "open-props": "^1.7.16",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "vest": "^5.4.6",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "20.2.0",
    "@angular-eslint/eslint-plugin": "20.2.0",
    "@angular-eslint/eslint-plugin-template": "20.2.0",
    "@angular-eslint/schematics": "20.2.0",
    "@angular-eslint/template-parser": "20.2.0",
    "@angular/build": "^20.2.1",
    "@angular/cli": "^20.2.1",
    "@angular/compiler-cli": "^20.2.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "all-contributors-cli": "^6.26.1",
    "chalk": "^5.6.0",
    "eslint": "^9.34.0",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "jasmine-core": "^5.10.0",
    "joi": "^18.0.1",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "ng-packagr": "^20.2.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wireit": "^0.14.12"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run hooks:pre-commit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,ts}": [
      "prettier --write"
    ],
    "*.{ts}": [
      "eslint --fix --cache"
    ]
  }
}
