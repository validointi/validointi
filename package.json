{
  "name": "validate-validaton",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "wireit",
    "build": "wireit",
    "build:demo": "wireit",
    "build:lib": "wireit",
    "test:lib": "wireit",
    "test:app": "wireit",
    "test": "wireit",
    "lint:lib": "wireit",
    "hooks:pre-commit": "node hooks/pre-commit.js",
    "prepare": "husky install"
  },
  "wireit": {
    "build:lib": {
      "command": "ng build --project validointi --configuration production",
      "output": [
        "dist/validate/**/*.*"
      ],
      "files": [
        "projects/validointi/core/src/**/*.*",
        "projects/validointi/core/package.json",
        "projects/validointi/core/tsconfig.lib.prod.json",
        "angular.json"
      ]
    },
    "build:demo": {
      "command": "ng build --project demo --configuration production --delete-output-path",
      "output": [
        "dist/demo/**/*.*"
      ],
      "files": [
        "projects/demo/src/**/*.*",
        "projects/demo/package.json",
        "projects/demo/tsconfig.app.json",
        "angular.json"
      ],
      "dependencies": [
        "build:lib"
      ]
    },
    "build": {
      "dependencies": [
        "build:lib",
        "build:demo"
      ]
    },
    "test:lib": {
      "command": "ng test --project validointi"
    },
    "test:app": {
      "command": "ng test --project demo",
      "dependencies": [
        "build:lib"
      ]
    },
    "test": {
      "dependencies": [
        "test:lib",
        "test:app"
      ]
    },
    "lint:lib": {
      "command": "ng lint --project validointi --fix",
      "files": [
        "**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs"
      ],
      "output": []
    },
    "start": {
      "command": "ng serve --project demo",
      "dependencies": [
        "build:lib"
      ],
      "/**": "The server cmd is actually not supported by wire-it yet, one it is, the start command will restart the server if there is a lib update **/",
      "server": true
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.0.0-rc.0",
    "@angular/common": "^15.0.0-rc.0",
    "@angular/compiler": "^15.0.0-rc.0",
    "@angular/core": "^15.0.0-rc.0",
    "@angular/forms": "^15.0.0-rc.0",
    "@angular/platform-browser": "^15.0.0-rc.0",
    "@angular/platform-browser-dynamic": "^15.0.0-rc.0",
    "@angular/router": "^15.0.0-rc.0",
    "husky": "^8.0.1",
    "open-props": "^1.4.16",
    "rxjs": "~7.5.6",
    "tslib": "^2.4.0",
    "vest": "^4.6.7",
    "wireit": "^0.7.1",
    "zone.js": "~0.11.8"
  },
  "devDependencies": {
    "@angular-builders/jest": "^14.0.0",
    "@angular-devkit/build-angular": "^15.0.0-rc.0",
    "@angular-eslint/builder": "14.1.2",
    "@angular-eslint/eslint-plugin": "14.1.2",
    "@angular-eslint/eslint-plugin-template": "14.1.2",
    "@angular-eslint/schematics": "14.1.2",
    "@angular-eslint/template-parser": "14.1.2",
    "@angular/cli": "^15.0.0-rc.0",
    "@angular/compiler-cli": "^15.0.0-rc.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.7.3",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "all-contributors-cli": "^6.20.5",
    "chalk": "^5.0.1",
    "eslint": "^8.18.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.1",
    "jasmine-core": "~4.3.0",
    "jest": "^28.1.3",
    "jest-preset-angular": "^12.2.0",
    "lint-staged": "^13.0.3",
    "ng-packagr": "^14.1.0",
    "ts-jest": "^28.0.7",
    "typescript": "~4.8.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run hooks:pre-commit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,ts}": [
      "prettier --write"
    ],
    "*.{ts}": [
      "eslint --fix --cache"
    ]
  }
}