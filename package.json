{
  "name": "validate-validaton",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "wireit",
    "build": "wireit",
    "build:demo": "wireit",
    "build:lib": "wireit",
    "build:schematics": "wireit",
    "test:lib": "wireit",
    "test": "wireit",
    "lint:lib": "wireit",
    "hooks:pre-commit": "node hooks/pre-commit.js",
    "prepare": "husky"
  },
  "wireit": {
    "build:lib": {
      "command": "ng build --project validointi --configuration production",
      "output": [
        "dist/validate/**/*.*"
      ],
      "files": [
        "projects/validointi/core/src/**/*.*",
        "projects/validointi/core/package.json",
        "projects/validointi/core/tsconfig.lib.prod.json",
        "angular.json"
      ]
    },
    "build:schematics": {
      "command": "npx tsc -p projects/validointi/core/tsconfig.schematics.json",
      "output": [
        "dist/validate/**/*.*"
      ],
      "files": [
        "projects/validointi/core/schematics/**/*.*",
        "projects/validointi/core/schematics/collection.json"
      ],
      "dependencies": [
        "build:lib"
      ]
    },
    "build:demo": {
      "command": "ng build --project demo --configuration production --delete-output-path",
      "output": [
        "dist/demo/**/*.*"
      ],
      "files": [
        "projects/demo/src/**/*.*",
        "projects/demo/package.json",
        "projects/demo/tsconfig.app.json",
        "angular.json"
      ],
      "dependencies": [
        "build:lib"
      ]
    },
    "build": {
      "dependencies": [
        "build:lib",
        "build:schematics",
        "build:demo"
      ]
    },
    "test:lib": {
      "command": "ng test --project validointi",
      "files": [
        "projects/validointi/core/src/**/*.*",
        "projects/validointi/core/package.json",
        "projects/validointi/core/tsconfig.lib.prod.json",
        "angular.json"
      ]
    },
    "test": {
      "dependencies": [
        "test:lib"
      ]
    },
    "lint:lib": {
      "command": "ng lint --project validointi --fix",
      "files": [
        "**/*.ts",
        ".eslintignore",
        ".eslintrc.cjs"
      ],
      "output": []
    },
    "start": {
      "command": "ng serve --project demo",
      "dependencies": [
        "build:lib"
      ],
      "files": [
        "dist/validointi/**/*.*"
      ],
      "service": true
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.1.3",
    "@angular/common": "^18.1.3",
    "@angular/compiler": "^18.1.3",
    "@angular/core": "^18.1.3",
    "@angular/forms": "^18.1.3",
    "@angular/platform-browser": "^18.1.3",
    "@angular/platform-browser-dynamic": "^18.1.3",
    "@angular/router": "^18.1.3",
    "open-props": "^1.7.5",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.3",
    "vest": "^5.4.0",
    "zone.js": "~0.14.8"
  },
  "devDependencies": {
    "@analogjs/platform": "^1.6.4",
    "@analogjs/vite-plugin-angular": "^1.6.4",
    "@analogjs/vitest-angular": "^1.6.4",
    "@angular-devkit/build-angular": "^18.1.3",
    "@angular-eslint/builder": "18.2.0",
    "@angular-eslint/eslint-plugin": "18.2.0",
    "@angular-eslint/eslint-plugin-template": "18.2.0",
    "@angular-eslint/schematics": "18.2.0",
    "@angular-eslint/template-parser": "18.2.0",
    "@angular/cli": "^18.1.3",
    "@angular/compiler-cli": "^18.1.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nx/vite": "~19.5.6",
    "@types/node": "^22.1.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "all-contributors-cli": "^6.26.1",
    "chalk": "^5.3.0",
    "eslint": "^8.57.0",
    "git-cz": "^4.9.0",
    "husky": "^9.1.4",
    "jasmine-core": "^5.2.0",
    "joi": "^17.13.3",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.8",
    "ng-packagr": "^18.1.0",
    "typescript": "^5.5.4",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.3.1",
    "wireit": "^0.14.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run hooks:pre-commit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,ts}": [
      "prettier --write"
    ],
    "*.{ts}": [
      "eslint --fix --cache"
    ]
  }
}
